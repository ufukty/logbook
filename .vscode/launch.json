  "version": "0.2.0",
  "configurations": [
    {
      "name": "Gateway",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "app/cmd/gateway",
      "cwd": "${workspaceFolder}/app",
      "args": ["-a", "api.yml", "-d", "../platform/local.yml"]
    },
    {
      "name": "Account",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "app/cmd/account",
      "cwd": "${workspaceFolder}/app",
      "args": [
        "-a",
        "api.yml",
        "-d",
        "../platform/local.yml",
        "-s",
        "cmd/account/testing.yml"
      ]
    },
    {
      "name": "Objectives",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "app/cmd/objectives",
      "cwd": "${workspaceFolder}/app",
      "args": [
        "-a",
        "api.yml",
        "-d",
        "../platform/local.yml",
        "-s",
        "cmd/objectives/testing.yml"
      ]
    }
  ]
}
