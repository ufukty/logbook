  "version": "0.2.0",
  "configurations": [
    {
      "name": "Gateway",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "app/cmd/gateway",
      "cwd": "${workspaceFolder}/app",
      "args": [
        "-e", "local",
        "-api", "api.yml",
        "-deployment", "../platform/local.yml",
        "-discovery", "internal/web/discovery/models/local/service_discovery.yml",
        "-cert", "../platform/local/tls/localhost.crt",
        "-key", "../platform/local/tls/localhost.key"
      ]
    },
    {
      "name": "Account",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "app/cmd/account",
      "cwd": "${workspaceFolder}/app",
      "args": [
        "-e", "local",
        "-api", "api.yml",
        "-deployment", "../platform/local.yml",
        "-service", "cmd/account/local.yml",
      ]
    },
    {
      "name": "Objectives",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "app/cmd/objectives",
      "cwd": "${workspaceFolder}/app",
      "args": [
        "-e", "local",
        "-api", "api.yml",
        "-deployment", "../platform/local.yml",
        "-service", "cmd/objectives/local.yml",
      ]
    }
  ]
}