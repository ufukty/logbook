{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "gateway",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "app/cmd/gateway",
      "cwd": "${workspaceFolder}/app",
      "args": [
        "-e",
        "local",
        "-api",
        "api.yml",
        "-deployment",
        "../platform/local/deployment.yml",
        "-discovery",
        "../platform/local/discovery.yml",
        "-cert",
        "../platform/local/tls/localhost.crt",
        "-key",
        "../platform/local/tls/localhost.key"
      ],
    },
    {
      "name": "account",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "app/cmd/account",
      "cwd": "${workspaceFolder}/app",
      "args": [
        "-e",
        "local",
        "-api",
        "api.yml",
        "-deployment",
        "../platform/local/deployment.yml",
        "-service",
        "cmd/account/local.yml",
        "-cert",
        "../platform/local/tls/localhost.crt",
        "-key",
        "../platform/local/tls/localhost.key"
      ],
      "preLaunchTask": "accounts-service-migration",
    },
    {
      "name": "objectives",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "app/cmd/objectives",
      "cwd": "${workspaceFolder}/app",
      "args": [
        "-e",
        "local",
        "-api",
        "api.yml",
        "-deployment",
        "../platform/local/deployment.yml",
        "-service",
        "cmd/objectives/local.yml",
        "-cert",
        "../platform/local/tls/localhost.crt",
        "-key",
        "../platform/local/tls/localhost.key"
      ],
      "preLaunchTask": "objectives-service-migration",
    }
  ],
  "compounds": [
    {
      "name": "local",
      "configurations": [
        "account",
        "objectives",
        "gateway"
      ],
      "stopAll": true,
    }
  ]
}